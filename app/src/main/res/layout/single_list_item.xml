<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="182dp"
    android:paddingBottom="4dp"
    android:layoutDirection="ltr"
    android:background="@drawable/cards_style"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp">


        <TextView
            android:id="@+id/location_name_TV"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title_TV"
            android:layout_toEndOf="@+id/textView"
            android:text="city_itemTV"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/location_name_TV"
            android:layout_alignBottom="@+id/location_name_TV"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:text="address: "
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="33dp"
            tools:text="Address: " />

        <TextView
            android:id="@+id/title_TV"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="18dp"
            android:textColor="#ffff"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#33B5E5"
            android:gravity="bottom|fill_vertical|center"
            android:text="name"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name_TV"
            android:layout_toStartOf="@+id/location_name_TV"
            android:text="lat, lon: " />

        <TextView
            android:id="@+id/visit_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:text="last visit: " />

</RelativeLayout>